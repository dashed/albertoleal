{
  "name": "albertoleal",
  "version": "1.0.0",
  "description": "A personal npm card for Alberto Leal (albertoleal.ca)",
  "license": "MIT",
  "repository": "dashed/albertoleal",
  "author": {
    "name": "Alberto Leal",
    "email": "mailforalberto@gmail.com",
    "url": "albertoleal.ca"
  },
  "bin": {
    "albertoleal": "bin/cli.js"
  },
  "dependencies": {
    "boxen": "^2.1.0",
    "husky": "^1.3.0",
    "import-jsx": "^1.3.0",
    "ink": "^0.5.1",
    "ink-select-input": "^2.0.0",
    "left-pad": "^1.3.0",
    "lint-staged": "^8.1.0",
    "meow": "^5.0.0",
    "opn": "^5.4.0",
    "prettier": "^1.15.3",
    "term-img": "^4.0.0"
  },
  "scripts": {
    "cli": "node bin/cli.js",
    "lint": "eslint bin --max-warnings=0",
    "prepare": "npm run pretty && npm run lint",
    "pretty": "prettier --write 'bin/**/*.{js,md}' '*.md'",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "bin/**/*.{js,md}": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "9.x",
    "eslint": "5.x",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-flowtype": "2.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x"
  }
}
